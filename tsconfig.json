{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noImplicitAny": true, // Enforce type safety
    "noUnusedParameters": true, // Enforce cleaner code
    "skipLibCheck": true, // Keep true if performance is a concern
    "allowJs": false, // Disable if using only TypeScript
    "noUnusedLocals": true, // Enforce cleaner code
    "strictNullChecks": true, // Enforce null safety
    "esModuleInterop": true // Keep true for CommonJS compatibility
  }
}

